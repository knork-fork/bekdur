{#
Forma za novi post
#}

{% if groupId is not null and groupId is defined %}
	
<form id="newPostForm" method="POST" action="{{ path('add_post') }}" enctype="multipart/form-data">
    <input type="hidden" name="groupId" value="{{ groupId }}">
	<div id="top">
		<input type="file" name="image" id="imageInput" class="inputfile" onchange="imageUpload()">
		<label for="imageInput"><span id="imageInputLabel"><i class="fa fa-file-image-o"></i>&nbsp;&nbsp;Odaberite sliku</span></label>
		
        <input type="file" name="file" id="fileInput" class="inputfile" onchange="fileUpload()">
		<label for="fileInput"><span id="fileInputLabel"><i class="fa fa-upload"></i>&nbsp;&nbsp;Odaberite datoteku</span></label>
	</div>
	<div id="middle">
		<div id="left">
            <div class="profileImageDiv"></div>
		</div>
        <input type="text" name="content" placeholder="NapiÅ¡ite objavu...">
	</div>
	<input type="submit" value="objavi" id="bottom">
</form>

{% endif %}