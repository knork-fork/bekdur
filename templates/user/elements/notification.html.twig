{#
Notifikacija
"center" i "bottom" oboje trebaju voditi na isti link
"right" zatvara obavijest
#}

{% for notification in notifications %}
<div class="notification">
	<div id="top">
		<div id="left">{{ notification.getUserGroup.getName }}</div>
		<div id="right">&#xf00d;</div>
	</div>
	<div id="center">
		<h3>{{ notification.getTitle }}</h3>
		<p>{{ notification.getText }}</p>
	</div>
	<div id="bottom" class="color_Wisteria">Otvori grupu</div>
</div>
{% endfor %}


{#
If going through updates route from frontend, also send additional variables - like total notification number for group
#}

{% if app.request.get('_route') == 'user_updates' %}

<div style="display:none">

	<div id = "updateRequest">ok</div>

	{% for group in groups %}
		<div class = "groupNotificationNumber" name = "group_{{ group.getUserGroup.getId }}">{{ group.getUserGroup.getNotificationNumber }}</div>
	{% endfor %}

</div>

{% endif %}